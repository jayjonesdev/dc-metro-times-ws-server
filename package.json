  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "supertest": "^6.2.4",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/ws": "^8.5.3",
    "jest-websocket-mock": "^2.4.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
